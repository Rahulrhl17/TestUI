                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/skip_nominee_details"
                            style="@style/OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="54dp"
                            android:text="Skip for now"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginEnd="4dp"
                            app:layout_constraintEnd_toStartOf="@id/save_nominee_details"
                            android:textSize="16sp"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/save_nominee_details"
                            style="@style/SolidButton"
                            android:layout_width="0dp"
                            android:layout_height="54dp"
                            android:text="Proceed"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="4dp"
                            app:layout_constraintStart_toEndOf="@id/skip_nominee_details"
                            android:textSize="16sp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>


