                            android:cursorVisible="false"
                            android:focusable="false"
                            android:paddingStart="10dp"
                            android:drawableEnd="@drawable/ic_calendar"
                            android:drawableTint="@color/finoBlue"
                            android:paddingEnd="8dp"
                            android:layout_marginTop="8dp"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:layout_width="wrap_content"
                            android:textAppearance="@style/WorkSansRegular"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:buttonTint="@color/primary"
                            app:checkedState="checked"
                            android:text="Guardian address same as customer address"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/WorkSansRegular"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:visibility="visible"
                            android:text="Guardian Address*"
                            android:layout_marginTop="14dp"/>

                        <EditText
                            android:id="@+id/guardian_address"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:background="@drawable/text_field_bg"
                            android:textAppearance="@style/WorkSansSemiBold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"
