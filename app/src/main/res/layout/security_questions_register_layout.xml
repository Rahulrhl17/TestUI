<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/off_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/header_layout"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/security_questions_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            android:layout_marginHorizontal="18dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/header_root"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    style="@style/WorkSansSemiBold"
                    android:text="@string/please_answer_any_three_of_the_questions_listed_below_to_set_mpin_amp_security_questions" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/WorkSansRegular"
                    android:textColor="@color/gray2"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:text="@string/enter_pan_no"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/pan_no"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/text_field_bg"
                    android:textAppearance="@style/WorkSansSemiBold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="BDGRH3187K"
                    android:paddingStart="10dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/WorkSansRegular"
                    android:textColor="@color/gray2"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:text="@string/enter_aadhaar_no"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/aadhaar_no"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/text_field_bg"
                    android:textAppearance="@style/WorkSansSemiBold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="6799 3668 2890 3788"
                    android:paddingStart="10dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/WorkSansRegular"
                    android:textColor="@color/gray2"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:text="@string/enter_mother_s_maiden_name"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/mother_maiden_name"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/text_field_bg"
                    android:textAppearance="@style/WorkSansSemiBold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""
                    android:paddingStart="10dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/WorkSansRegular"
                    android:textColor="@color/gray2"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:text="@string/enter_email_id"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/text_field_bg"
                    android:textAppearance="@style/WorkSansSemiBold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""
                    android:paddingStart="10dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/WorkSansRegular"
                    android:textColor="@color/gray2"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:text="@string/enter_date_of_birth"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/text_field_bg"
                    android:textAppearance="@style/WorkSansSemiBold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""
                    android:paddingStart="10dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/WorkSansRegular"
                    android:textColor="@color/gray2"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:text="@string/enter_customer_id"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/customer_id"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/text_field_bg"
                    android:textAppearance="@style/WorkSansSemiBold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""
                    android:paddingStart="10dp"
                    android:layout_marginTop="8dp"/>



            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/proceed"
            style="@style/SolidButtonDisabled"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/_continue"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/security_questions_card"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>