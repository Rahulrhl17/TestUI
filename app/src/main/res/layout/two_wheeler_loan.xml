<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/off_white"
    >
    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                android:layout_marginTop="@dimen/dimen_24"
                style="@style/CardViewStyle"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_20"
                    android:paddingEnd="@dimen/dimen_20"
                    android:paddingTop="29dp"
                    android:paddingBottom="@dimen/dimen_20">
                    <TextView
                        android:id="@+id/loan_features"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="@string/loan_features"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/text_colors"
                        android:textFontWeight="600"
                        />
                    <TextView
                        android:id="@+id/brandsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/loan_features"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="@string/brands"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray2"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/dimen_27"
                        />
                    <TextView
                        android:id="@+id/brandsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/brandsText"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="Bajaj, Chetak, KTM, Dominar, Triump,"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/text_colors"
                        android:textFontWeight="600"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                    <TextView
                        android:id="@+id/loanAmountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/brandsValue"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="@string/loan_amount"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray2"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/dimen_16"
                        />
                    <TextView
                        android:id="@+id/loanAmountValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/loanAmountText"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="50K to 7 Lacs"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/text_colors"
                        android:textFontWeight="600"
                        android:layout_marginTop="@dimen/dimen_8"
                        />


                    <TextView
                        android:id="@+id/rateOfInterestText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/loanAmountValue"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="@string/rate_of_interest"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray2"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/dimen_16"
                        />
                    <TextView
                        android:id="@+id/rateOfInterestValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rateOfInterestText"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="13% - 30% p.a."
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/text_colors"
                        android:textFontWeight="600"
                        android:layout_marginTop="@dimen/dimen_8"
                        />

                    <TextView
                        android:id="@+id/tenure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rateOfInterestValue"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="@string/tenure"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray2"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/dimen_16"
                        />
                    <TextView
                        android:id="@+id/tenureValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tenure"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="12 to 36 months"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/text_colors"
                        android:textFontWeight="600"
                        android:layout_marginTop="@dimen/dimen_8"
                        />

                    <TextView
                        android:id="@+id/loanProcessingFeesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tenureValue"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="@string/loan_to_value"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray2"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/dimen_16"
                        />
                    <TextView
                        android:id="@+id/loanProcessingFeesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/loanProcessingFeesText"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="up to 4% of loan amount + GST"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/text_colors"
                        android:textFontWeight="600"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                    <TextView
                        android:id="@+id/requiredLoanAmountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/loanProcessingFeesValue"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="Enter Required Loan Amount"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray2"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/dimen_16"
                        />

                    <EditText
                        android:id="@+id/amountValue"
                        style="@style/WorkSansRegular"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:background="@drawable/text_field_bg"
                        android:hint="₹"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:paddingStart="10dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey3"
                        android:textFontWeight="400"
                        android:textSize="@dimen/text_13"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/requiredLoanAmountText" />
                    <TextView
                        android:id="@+id/termsConditionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/amountValue"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/WorkSansSemiBold"
                        android:text="@string/read_agreed_terms_condtion"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/text_colors"
                        android:textFontWeight="400"
                        android:layout_marginTop="@dimen/dimen_15"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/apply"
                style="@style/SolidButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:text="@string/proceed"
                android:textSize="@dimen/text_16"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                android:layout_marginTop="@dimen/dimen_15"
                android:textFontWeight="600"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>