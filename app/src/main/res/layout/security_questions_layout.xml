<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/off_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/header_layout"/>

        <ScrollView
            android:id="@+id/security_questions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/header_root"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scrollbars="none">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:layout_marginHorizontal="18dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcome_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        style="@style/WorkSansSemiBold"
                        android:text="Please answer any three of the questions listed below to set MPIN &amp; security questions." />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/WorkSansRegular"
                        android:textColor="@color/gray2"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:text="Enter PAN No"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/pan_no"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/text_field_bg"
                        android:textAppearance="@style/WorkSansSemiBold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="BDGRH3187K"
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/WorkSansRegular"
                        android:textColor="@color/gray2"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:text="Enter Aadhaar No"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/aadhaar_no"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/text_field_bg"
                        android:textAppearance="@style/WorkSansSemiBold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="6799 3668 2890 3788"
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/WorkSansRegular"
                        android:textColor="@color/gray2"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:text="Enter mother's maiden name"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/mother_maiden_name"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/text_field_bg"
                        android:textAppearance="@style/WorkSansSemiBold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=""
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/WorkSansRegular"
                        android:textColor="@color/gray2"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:text="Enter email ID"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/email_id"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/text_field_bg"
                        android:textAppearance="@style/WorkSansSemiBold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=""
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/WorkSansRegular"
                        android:textColor="@color/gray2"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:text="Enter date of birth"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/text_field_bg"
                        android:textAppearance="@style/WorkSansSemiBold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=""
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/WorkSansRegular"
                        android:textColor="@color/gray2"
                        android:textSize="14sp"
                        android:visibility="visible"
                        android:text="Enter Customer ID"
                        android:layout_marginTop="20dp"/>

                    <EditText
                        android:id="@+id/customer_id"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:background="@drawable/text_field_bg"
                        android:textAppearance="@style/WorkSansSemiBold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text=""
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"/>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/proceed"
            style="@style/SolidButtonDisabled"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:text="Continue"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/security_questions_layout"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>