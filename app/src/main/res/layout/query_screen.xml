<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/off_white">
<include layout="@layout/header_layout"
    android:id="@+id/headerLayout"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginStart="@dimen/dimen_18"
        android:layout_marginEnd="@dimen/dimen_18"
        style="@style/CardViewStyle">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_15"
            android:paddingEnd="25dp"
            android:paddingTop="23dp"
            android:paddingBottom="26dp"
            >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/raiseNewQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/raiseQueryIcon"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_raise_query"/>
        <TextView
            android:id="@+id/raiseQueryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/raiseQueryIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/raiseQueryIcon"
            app:layout_constraintEnd_toStartOf="@id/raise_query_forward_icon"
            style="@style/WorkSansMedium"
            android:text="@string/raise_new_query"
            android:textSize="@dimen/text_12"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8"

            />
        <ImageView
            android:id="@+id/raise_query_forward_icon"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/raiseQueryIcon"
            app:layout_constraintBottom_toBottomOf="@id/raiseQueryIcon"
            android:src="@drawable/ic_round_caret"
            android:rotation="270"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/stroke"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/stroke"
            app:layout_constraintTop_toBottomOf="@id/raiseNewQuery"
            android:layout_marginTop="@dimen/dimen_20"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/trackQuery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/stroke"
                android:layout_marginTop="@dimen/dimen_20"
                >
                <ImageView
                    android:id="@+id/trackQueryIcon"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_receipt"/>
                <TextView
                    android:id="@+id/trackQueryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/trackQueryIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/track_query_forward_icon"
                    style="@style/WorkSansMedium"
                    android:text="@string/track_query"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/dimen_8"
                    android:layout_marginEnd="@dimen/dimen_8"
                    app:layout_constraintBottom_toBottomOf="@id/trackQueryIcon"

                    />
                <ImageView
                    android:id="@+id/track_query_forward_icon"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/trackQueryIcon"
                    app:layout_constraintBottom_toBottomOf="@id/trackQueryIcon"
                    android:src="@drawable/ic_round_caret"
                    android:rotation="270"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>