<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dimen_32">
    <include layout="@layout/header_layout"
        android:id="@+id/headerLayout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/off_white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/start_end_margin"
            android:layout_marginEnd="@dimen/start_end_margin"
            android:layout_marginTop="@dimen/dimen_24"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delivery_address"
                android:textSize="@dimen/text_16"
                style="@style/WorkSansSemiBold"
                android:layout_marginStart="@dimen/dimen_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/text_colors"/>
            <TextView
                android:id="@+id/currentBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Balance : 0.0079 gm"
                android:textSize="@dimen/text_14"
                style="@style/WorkSansMedium"
                android:textColor="@color/text_colors"
                android:layout_marginTop="@dimen/dimen_22"
                android:layout_marginStart="@dimen/dimen_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/selectQuantityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/currentBalance"
                android:layout_marginTop="@dimen/dimen_26"
                style="@style/CardViewStyle">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_20">
                    <TextView
                        android:id="@+id/selectQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_quantity"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginStart="@dimen/dimen_8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/dark_grey"/>
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/select_quantity_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/selectQuantity"
                        android:entries="@array/month_array"
                        style="@style/SpinnerStyle"
                        android:theme="@style/SpinnerStyle"
                        android:layout_marginStart="@dimen/dimen_8"
                        android:paddingTop="@dimen/dimen_9"
                        android:paddingBottom="@dimen/dimen_9"
                        android:paddingStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_8"/>
                    <TextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginStart="@dimen/dimen_8"
                        app:layout_constraintTop_toBottomOf="@id/select_quantity_spinner"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/text_colors"
                        android:layout_marginTop="@dimen/dimen_19"
                        android:drawableEnd="@drawable/ic_info"
                        android:drawablePadding="@dimen/dimen_8"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/faqLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/selectQuantityLayout"
                android:layout_marginTop="@dimen/dimen_22"
                style="@style/CardViewStyle"
                >
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="@dimen/dimen_20"
                  android:paddingBottom="@dimen/dimen_20"
                  android:paddingStart="@dimen/_13dp"
                  android:paddingEnd="@dimen/_13dp">
                <TextView
                    android:id="@+id/faqs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAQs"
                    style="@style/WorkSansSemiBold"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/text_colors"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                  <ImageView
                      android:id="@+id/forward"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_forward_arrow"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:tint="@color/fab_bg"/>

              </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/faqLayout"
                android:layout_marginTop="@dimen/dimen_9"
                android:textColor="@color/button_blue"
                android:text="@string/view_t_amp_c"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansSemiBold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/proceedButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        app:layout_constraintBottom_toTopOf="@id/poweredBy"
        style="@style/SolidButton"
        android:layout_marginTop="@dimen/dimen_32"
        android:text="@string/proceed"
        android:textSize="@dimen/text_16"
        android:layout_marginBottom="@dimen/dimen_32"
        android:layout_marginStart="@dimen/start_end_margin"
        android:layout_marginEnd="@dimen/start_end_margin"
        />

    <TextView
        android:id="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered_by"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dimen_37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/safeGold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        style="@style/WorkSansRegular"
        android:textColor="@color/black"
        android:textSize="@dimen/text_10"
        />

    <ImageView
        android:id="@+id/safeGold"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:src="@drawable/safe_gold"
        app:layout_constraintTop_toTopOf="@id/poweredBy"
        app:layout_constraintBottom_toBottomOf="@id/poweredBy"
        app:layout_constraintStart_toEndOf="@id/poweredBy"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dimen_6"/>

</androidx.constraintlayout.widget.ConstraintLayout>