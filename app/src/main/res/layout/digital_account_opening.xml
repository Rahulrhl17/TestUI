<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/header_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header_root"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="60dp"
                        app:layout_constraintBottom_toBottomOf="@id/womens_digisa_bg"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:scaleType="fitEnd"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/womens_digisa_text"
                            android:src="@drawable/women_image"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/purple"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:alpha="0.5"/>

                        <TextView
                            android:id="@+id/womens_digisa_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/WorkSansBold"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="WOMENS SAVING\nACCOUNT"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/womens_digisa_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/womens_digisa_card"
                        />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/womens_digisa_card"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:cardCornerRadius="15dp"
                        android:layout_marginHorizontal="10dp"
                        app:contentPadding="5dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="20dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2.1"
                                android:background="@drawable/womens_digisa_card_gradient"
                                >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginHorizontal="8dp"
                                    android:layout_marginVertical="12dp"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/WorkSansExtraBold"
                                        android:textSize="24sp"
                                        android:textColor="@color/white"
                                        android:text="Discounts"
                                        android:layout_gravity="center_horizontal"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/WorkSansMedium"
                                        android:textSize="14sp"
                                        android:textColor="@color/white"
                                        android:text="on every purchase"
                                        android:layout_gravity="center_horizontal"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/WorkSansBold"
                                        android:textSize="18sp"
                                        android:textColor="@color/white"
                                        android:text="across 10+ brands"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_horizontal"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/WorkSansRegular"
                                        android:textSize="12sp"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="12dp"
                                        android:text="At an annual subscription fees of just â‚¹899"
                                        android:layout_gravity="center_horizontal"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/dashed_line"
                                    android:layout_marginVertical="20dp"
                                    />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginVertical="12dp"
                                    android:layout_weight="1"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:layout_marginVertical="2dp"
                                        tools:ignore="NestedWeights">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_no_minimum_balance"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/WorkSansMedium"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:text="No minimum balance"
                                            android:layout_marginStart="8dp"
                                            android:layout_gravity="center_vertical"/>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginVertical="2dp"

                                        android:orientation="horizontal"
                                        tools:ignore="NestedWeights">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_designer_debit_card"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/WorkSansMedium"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:text="Designer Debit card"
                                            android:layout_marginStart="8dp"
                                            android:layout_gravity="center_vertical"/>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginVertical="2dp"

                                        android:orientation="horizontal"
                                        tools:ignore="NestedWeights">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_atm_withdrawals"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/WorkSansMedium"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:text="Unlimited ATM withdrawals"
                                            android:layout_marginStart="8dp"
                                            android:layout_gravity="center_vertical"/>


                                    </LinearLayout>


                                </LinearLayout>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="0.1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_forward_arrow"
                                    app:tint="@color/white" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="60dp"
                        app:layout_constraintBottom_toBottomOf="@id/digisa_bg"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:scaleType="fitEnd"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/digisa_text"
                            android:src="@drawable/man_using_smartphone"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:alpha="0.5"/>

                        <TextView
                            android:id="@+id/digisa_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/WorkSansBold"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:text="DIGITAL SAVING\nACCOUNT"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/digisa_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/digisa_card"
                        />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/digisa_card"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:cardCornerRadius="15dp"
                        android:layout_marginHorizontal="10dp"
                        app:contentPadding="4dp"
                        app:cardElevation="4dp"
                        android:layout_marginBottom="20dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2.1"
                                android:background="@drawable/digisa_card_gradient"
                                >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginHorizontal="8dp"
                                    android:layout_marginVertical="12dp"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/WorkSansBold"
                                        android:textSize="18sp"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:text="Benefits Worth"
                                        android:layout_gravity="center_horizontal"/>



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/WorkSansBlack"
                                        android:textSize="34sp"
                                        android:textColor="@color/white"
                                        android:text="â‚¹6,000"
                                        android:textAlignment="center"
                                        android:layout_gravity="center_horizontal"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/WorkSansRegular"
                                        android:textSize="12sp"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="12dp"
                                        android:text="At an annual subscription fees of just â‚¹450"
                                        android:layout_gravity="center_horizontal"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/dashed_line"
                                    android:layout_marginVertical="20dp"
                                    />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginVertical="12dp"
                                    android:layout_weight="1"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:layout_marginVertical="2dp"
                                        tools:ignore="NestedWeights">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_no_minimum_balance"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/WorkSansMedium"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:text="No minimum balance"
                                            android:layout_marginStart="8dp"
                                            android:layout_gravity="center_vertical"/>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginVertical="2dp"

                                        android:orientation="horizontal"
                                        tools:ignore="NestedWeights">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_designer_debit_card"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/WorkSansMedium"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:text="Offers on transactions"
                                            android:layout_marginStart="8dp"
                                            android:layout_gravity="center_vertical"/>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:layout_marginVertical="2dp"

                                        android:orientation="horizontal"
                                        tools:ignore="NestedWeights">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_atm_withdrawals"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/WorkSansMedium"
                                            android:textSize="14sp"
                                            android:textColor="@color/white"
                                            android:text="5 Free monthly ATM withdrawals"
                                            android:layout_marginStart="8dp"
                                            android:layout_gravity="center_vertical"/>


                                    </LinearLayout>


                                </LinearLayout>

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="0.1"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_forward_arrow"
                                    app:tint="@color/white" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>