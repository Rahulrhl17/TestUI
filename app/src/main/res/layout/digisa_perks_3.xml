<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_gradient_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline4"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <TextView
                android:layout_height="wrap_content"
                style="@style/WorkSansLight"
                android:layout_width="wrap_content"
                android:text="On Completing"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:layout_marginStart="20dp"
                android:textSize="22sp"/>

            <TextView
                android:layout_height="wrap_content"
                style="@style/WorkSansBold"
                android:layout_width="wrap_content"
                android:text="Video KYC"
                android:includeFontPadding="false"
                android:textColor="@color/almostWhite"
                android:layout_marginStart="20dp"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                >

                <TextView
                    android:layout_height="wrap_content"
                    style="@style/WorkSansLight"
                    android:layout_width="wrap_content"
                    android:text="Get"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="32sp"/>

                <TextView
                    android:layout_height="wrap_content"
                    style="@style/WorkSansBold"
                    android:layout_width="wrap_content"
                    android:text="â‚¹200*"
                    android:layout_marginStart="8dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="32sp"/>

            </LinearLayout>



            <TextView
                android:layout_height="wrap_content"
                style="@style/WorkSansSemiBold"
                android:layout_width="wrap_content"
                android:text="CASHBACK &amp;"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="28sp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fino_reward_points"
                android:scaleType="fitStart"
                android:layout_marginTop="20dp"/>

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:src="@drawable/man_showing_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.54" />


</androidx.constraintlayout.widget.ConstraintLayout>
