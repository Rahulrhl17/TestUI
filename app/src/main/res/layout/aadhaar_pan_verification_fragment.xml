<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansSemiBold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="visible"
                android:text="@string/enter_your_aadhaar_and_pan_details"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansRegular"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="visible"
                android:text="@string/enter_aadhaar_number"
                android:layout_marginTop="14dp"/>

            <EditText
                android:id="@+id/aadhaar_number"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/text_field_bg"
                android:inputType="number"
                style="@style/WorkSansRegular"
                android:maxLength="12"
                android:hint="0000 0000 0000"
                android:paddingStart="10dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansRegular"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="visible"
                android:text="@string/enter_pan_number"
                android:layout_marginTop="14dp"/>

            <EditText
                android:id="@+id/pan_no"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/text_field_bg"
                android:inputType="number"
                style="@style/WorkSansRegular"
                android:maxLength="12"
                android:hint="ABCDE1234F"
                android:paddingStart="10dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansRegular"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="visible"
                android:text="@string/politically_exposed_person"
                android:layout_marginTop="14dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/political_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textAppearance="@style/WorkSansSemiBold"
                    android:textColor="@color/black"
                    app:buttonTint="@color/primary"
                    android:paddingHorizontal="8dp"
                    android:textSize="16sp"
                    />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/political_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    app:buttonTint="@color/primary"
                    android:paddingHorizontal="8dp"
                    android:textSize="16sp"
                    android:textAppearance="@style/WorkSansSemiBold"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansRegular"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="visible"
                android:text="@string/use_aadhaar_for_payments_aeps"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/aeps_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable"
                    android:textAppearance="@style/WorkSansSemiBold"
                    android:textColor="@color/black"
                    app:buttonTint="@color/primary"
                    android:paddingHorizontal="8dp"
                    android:textSize="16sp"
                    />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/aeps_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disable"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    app:buttonTint="@color/primary"
                    android:paddingHorizontal="8dp"
                    android:textSize="16sp"
                    android:textAppearance="@style/WorkSansSemiBold"
                    />

            </LinearLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:textAppearance="@style/WorkSansSemiBold"
                android:textColor="@color/primary"
                android:textSize="14sp"
                app:buttonTint="@color/lightGray"
                android:text="@string/fatca_declaration"
                android:paddingStart="8dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:textAppearance="@style/WorkSansRegular"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:buttonTint="@color/lightGray"
                android:text="@string/i_hereby_provide_my_consent_to_fino_payments_bank_to_fetch_my_kyc_details_using_aadhaar_from_uidai_and_validate_my_pan_from_nsdl_for_the_purpose_of_account_opening_i_have_not_opened_aadhaar_otp_based_account_with_any_other_bank_in_india_and_will_not_apply_for_it_in_future_as_well_i_give_my_consent_to_download_my_kyc_records_from_the_central_kyc_registry_ckycr_only_for_the_purpose_of_verification_of_my_identity_and_address_from_the_database_of_ckycr_registry"
                android:paddingStart="8dp"
                android:gravity="top"
                android:layout_height="wrap_content"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/proceed"
                style="@style/SolidButtonDisabled"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/proceed"
                android:textSize="16sp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>