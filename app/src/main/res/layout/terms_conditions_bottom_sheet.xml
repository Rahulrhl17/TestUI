<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <ImageView
               android:layout_width="@dimen/dimen_44"
               android:layout_height="4dp"
               android:backgroundTint="@color/white"
               android:layout_gravity="center"
               android:src="@drawable/ic_bottom_sheet_drag_handling"
               android:layout_marginTop="@dimen/dimen_6"
               />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dimen_24"
            android:paddingStart="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_6"
            android:background="@drawable/bottomsheet_dialog_curve_shape">
            <TextView
                android:id="@+id/termConditionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WorkSansSemiBold"
                android:text="@string/terms_conditions"
                android:textSize="@dimen/text_20"
                android:textColor="@color/text_colors"
                android:layout_marginTop="@dimen/dimen_24"
                />

            <TextView
                android:id="@+id/termConditionDesp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/WorkSansMedium"
                android:text="@string/terms_condition_description"
                android:textSize="@dimen/text_14"
                android:textColor="@color/text_colors"
                android:layout_marginTop="@dimen/dimen_24"
                />

            <com.google.android.material.button.MaterialButton
            android:id="@+id/agree"
            style="@style/SolidButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:text="I agree"
            android:textSize="@dimen/text_16"
                android:layout_marginTop="@dimen/dimen_24"

                />
        </LinearLayout>

       </LinearLayout>
</ScrollView>