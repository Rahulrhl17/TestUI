<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/off_white">
    <include layout="@layout/header_layout"
        android:id="@+id/headerLayout"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginStart="@dimen/dimen_18"
        android:layout_marginEnd="@dimen/dimen_18"
        style="@style/CardViewStyle"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/start_end_margin"
            android:paddingEnd="@dimen/start_end_margin"
            android:paddingTop="@dimen/dimen_15"
            android:paddingBottom="@dimen/_25dp">
            <TextView
                android:id="@+id/select_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/WorkSansRegular"
                android:text="@string/select_category"
                android:textSize="@dimen/text_12"
                android:textColor="@color/dark_grey"
                />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/loan_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/acc_holder_relationship"
                style="@style/SpinnerStyle"
                android:theme="@style/SpinnerStyle"
                android:layout_marginTop="@dimen/dimen_8"
                app:layout_constraintTop_toBottomOf="@id/select_category"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>