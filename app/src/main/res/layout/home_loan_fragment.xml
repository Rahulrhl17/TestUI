<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<include layout="@layout/header_layout"
    android:id="@+id/headerLayout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                android:layout_marginTop="@dimen/dimen_24"
                style="@style/CardViewStyle"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dimen_20"
                    android:paddingTop="29dp"
                    android:paddingEnd="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_20">

                    <TextView
                        android:id="@+id/headerText"
                        style="@style/WorkSansSemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/provice_details"
                        android:textColor="@color/text_colors"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/nameText"
                        style="@style/WorkSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:text="@string/name"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/nameValue"
                        style="@style/WorkSansSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:textColor="@color/text_colors"
                        android:textSize="@dimen/text_14"
                        tools:text="Deependra Geeta"

                        />

                    <TextView
                        android:id="@+id/panText"
                        style="@style/WorkSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:text="@string/pan"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/panValue"
                        style="@style/WorkSansSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:textColor="@color/text_colors"
                        android:textSize="@dimen/text_14"
                        tools:text="AIYPD9085D"

                        />

                    <TextView
                        android:id="@+id/mobileNumberText"
                        style="@style/WorkSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:text="@string/mobile_number"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/mobileNumberValue"
                        style="@style/WorkSansSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:textColor="@color/text_colors"
                        android:textSize="@dimen/text_14"
                        tools:text="8493339285"

                        />

                    <TextView
                        android:id="@+id/loanTypeText"
                        style="@style/WorkSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:text="@string/loan_type"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_12" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/loan_type_spinner"
                        style="@style/SpinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:entries="@array/acc_holder_relationship"
                        android:theme="@style/SpinnerStyle" />

                    <TextView
                        android:id="@+id/pincodeText"
                        style="@style/WorkSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:text="@string/enter_your_pin_code"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_12" />

                    <EditText
                        android:id="@+id/code"
                        style="@style/WorkSansRegular"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:background="@drawable/text_field_bg"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_13" />

                    <TextView
                        android:id="@+id/stateText"
                        style="@style/WorkSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:text="@string/state"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_12" />

                    <EditText
                        android:id="@+id/stateValue"
                        style="@style/WorkSansRegular"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:background="@drawable/text_field_bg"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_13" />

                    <TextView
                        android:id="@+id/cityText"
                        style="@style/WorkSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:text="@string/city"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_12" />

                    <EditText
                        android:id="@+id/cityValue"
                        style="@style/WorkSansRegular"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:background="@drawable/text_field_bg"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_13" />

                    <TextView
                        android:id="@+id/requiredLoanAmountText"
                        style="@style/WorkSansRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:text="@string/enter_required_loan_amount"
                        android:textColor="@color/gray2"
                        android:textSize="@dimen/text_12" />

                    <EditText
                        android:id="@+id/amountValue"
                        style="@style/WorkSansRegular"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:background="@drawable/text_field_bg"
                        android:hint="₹"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:paddingStart="10dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey3"
                        android:textSize="@dimen/text_13" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/termsConditionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/WorkSansRegular"
                android:text="@string/read_agreed_terms_condtion"
                android:textSize="@dimen/text_12"
                android:textColor="@color/text_colors"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                android:layout_marginTop="@dimen/dimen_15"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/apply"
                style="@style/SolidButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:text="@string/proceed"
                android:textSize="@dimen/text_16"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/termsConditionText"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginStart="@dimen/start_end_margin"
                android:layout_marginEnd="@dimen/start_end_margin"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>