<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/indigo"
    android:paddingStart="@dimen/start_end_margin"
    android:paddingEnd="@dimen/start_end_margin">
    >
    <ImageView
        android:id="@+id/done_image"
        android:layout_width="209dp"
        android:layout_height="209dp"
        android:src="@drawable/done_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"/>
    <TextView
        android:id="@+id/headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_27"
        android:textSize="@dimen/text_24"
        android:textAlignment="center"
        android:textColor="@color/white"
        style="@style/WorkSansSemiBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/done_image"
        android:text="Application submitted"
        />
    <TextView
        android:id="@+id/thankyouMssg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:textSize="@dimen/text_14"
        android:textAlignment="center"
        android:textColor="@color/white"
        style="@style/WorkSansRegular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headline"
        android:text="Thank You for applying, you will get a call back from Mahindra Rural Housing Finance"
        />
    <TextView
        android:id="@+id/leadId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6"
        android:textSize="@dimen/text_14"
        android:textAlignment="center"
        android:textColor="@color/white"
        style="@style/WorkSansRegular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thankyouMssg"
        android:text="Lead ID : 5456657687854"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/proceed"
        style="@style/SolidButtonWhite"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/okay"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>