<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/header_layout"
        android:id="@+id/headerLayout"/>
<ImageView
    android:id="@+id/icon"
    android:layout_width="@dimen/dimen_37"
    android:layout_height="54dp"
    app:layout_constraintTop_toBottomOf="@id/headerLayout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="@dimen/dimen_24"
    android:src="@drawable/ic_mpin"
    android:layout_marginStart="@dimen/start_end_margin"
    android:layout_marginEnd="@dimen/start_end_margin"/>
    <TextView
        android:id="@+id/enterNewMpinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WorkSansSemiBold"
        android:text="@string/enter_new_mpin"
        android:textSize="@dimen/text_20"
        android:textColor="@color/text_colors"
        android:layout_marginTop="@dimen/dimen_16"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/start_end_margin"
        android:paddingEnd="@dimen/start_end_margin"
        />
    <TextView
        android:id="@+id/descp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WorkSansRegular"
        android:text="@string/mpin_cannot_be_four_consecutive_numbers_or_same_number_repeated_four_times"
        android:textSize="@dimen/text_12"
        android:textColor="@color/text_colors"
        android:layout_marginTop="@dimen/dimen_8"
        app:layout_constraintTop_toBottomOf="@id/enterNewMpinText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/start_end_margin"
        android:paddingEnd="@dimen/start_end_margin"
        android:gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/mpinLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descp"
            android:layout_marginTop="@dimen/dimen_24">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pin_one"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/ic_mpin_empty"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pin_two"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/ic_mpin_empty"
                android:layout_marginStart="@dimen/dimen_12"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pin_three"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/ic_mpin_empty"
                android:layout_marginStart="@dimen/dimen_12"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pin_four"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/ic_mpin_empty"
                android:layout_marginStart="@dimen/dimen_12"/>

        </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/forgot_mpin"
        style="@style/TextButton"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="40dp"
        android:text="@string/forgot_mpin"
        android:fontFamily="@font/work_sans_semibold"
        android:textSize="12sp"
        android:textColor="@color/text_color_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/save_or_verify"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_or_verify"
        style="@style/SolidButton"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="40dp"
        android:text="@string/save"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>