<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/verifying_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/verifying_mobile"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/verifying_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/please_wait_while_we_verify_your_mobile_number"
        app:layout_constraintTop_toBottomOf="@id/verifying_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="80dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/WorkSansSemiBold"/>

    <TextView
        android:id="@+id/verifying_subtext"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/verifying_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/this_may_take_a_few_seconds_please_don_t_exit_the_app_or_press_the_back_button"
        style="@style/WorkSansRegular"/>

    <TextView
        android:id="@+id/link_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/verifying_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/_is_linked_to_a_finopay_account"
        tools:text="+91 85452 85452 is linked to a FinoPay account."
        style="@style/WorkSansRegular"/>

    <LinearLayout
        android:id="@+id/redirectin_layoutt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginVertical="@dimen/dimen_24"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/link_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        
        <ProgressBar
            android:id="@+id/verifying_progress"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:indeterminate="true"
            android:layout_gravity="center_vertical"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/finoBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="@string/redirecting"
            android:includeFontPadding="false"
            style="@style/WorkSansSemiBold"/>
        
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verify_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/link_status"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/switch_sim"
            style="@style/OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:text="@string/switch_sim"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/open_account"
            android:textSize="16sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/open_account"
            style="@style/SolidButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:text="@string/open_account"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/switch_sim"
            android:textSize="16sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>