<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/header_layout"
        android:id="@+id/headerLayout"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_40"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="@dimen/dimen_9"
        android:layout_marginTop="@dimen/dimen_15"
        app:layout_constraintEnd_toStartOf="@id/filterLayout"
        android:layout_marginEnd="5dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_10"
            >
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="@dimen/dimen_12"
                android:layout_height="@dimen/dimen_12"
                android:src="@drawable/ic_search"
                app:tint="@color/primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <View
                android:id="@+id/stroke"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="7dp"
                android:background="@color/search_stroke"
                app:layout_constraintStart_toEndOf="@id/searchIcon"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintStart_toEndOf="@id/stroke"
                android:layout_marginStart="@dimen/dimen_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="@string/search_by_category_or_request_id"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansRegular"
                android:textColorHint="@color/search_hint"
                android:textColor="@color/text_colors"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/filterLayout"
            android:layout_width="42dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_16"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10"
                >
                <ImageView
                    android:id="@+id/filterIcon"
                    android:layout_width="@dimen/dimen_12"
                    android:layout_height="@dimen/dimen_12"
                    android:src="@drawable/ic_filter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/exploreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/searchLayout"
                app:layout_constraintStart_toStartOf="@id/searchLayout"
                android:layout_marginStart="@dimen/dimen_9"
                android:layout_marginTop="@dimen/dimen_15"
                style="@style/WorkSansSemiBold"
                android:text="@string/all_raised_queries"
                android:textSize="@dimen/text_16"
                android:textColor="@color/text_colors"


                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_18"
                android:layout_marginEnd="@dimen/dimen_18"
                android:layout_marginTop="@dimen/dimen_12"
                app:layout_constraintTop_toBottomOf="@id/exploreText"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/viewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                style="@style/WorkSansSemiBold"
                android:text="@string/view_more"
                android:textSize="@dimen/text_12"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@id/recyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimen_24"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>