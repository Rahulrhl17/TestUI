<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_layout" />


    <TextView
        android:id="@+id/enterNewMpinText"
        style="@style/WorkSansSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:paddingStart="@dimen/start_end_margin"
        android:paddingEnd="@dimen/start_end_margin"
        android:text="@string/set_new_pin"
        android:textColor="@color/text_colors"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout" />

    <LinearLayout
        android:id="@+id/mpinLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enterNewMpinText"

        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pin_one"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:src="@drawable/ic_mpin_empty" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pin_two"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_12"
            android:src="@drawable/ic_mpin_empty" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pin_three"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_12"
            android:src="@drawable/ic_mpin_empty" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pin_four"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_12"
            android:src="@drawable/ic_mpin_empty" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        style="@style/SolidButton"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_marginBottom="20dp"
        android:text="@string/confirm"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mpinLayout"

        />
</androidx.constraintlayout.widget.ConstraintLayout>