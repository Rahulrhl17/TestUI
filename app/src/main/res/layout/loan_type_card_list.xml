<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/start_end_margin"
    android:layout_marginEnd="@dimen/start_end_margin"
    style="@style/CardViewStyle">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_20"
        android:paddingStart="@dimen/dimen_24"
        android:paddingBottom="@dimen/dimen_6"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_payments"/>
        <TextView
            android:id="@+id/itemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/forward_icon"
            style="@style/WorkSansSemiBold"
            tools:text="Digital Gold"
            android:textSize="@dimen/text_12"
            android:textColor="@color/text_colors"
            android:textFontWeight="500"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginEnd="@dimen/dimen_8"

            />
        <TextView
            android:id="@+id/itemDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toBottomOf="@id/itemName"
            app:layout_constraintEnd_toStartOf="@id/forward_icon"
            android:layout_marginStart="@dimen/dimen_8"
            style="@style/WorkSansSemiBold"
            tools:text="Explore Home loan provided by Mahindra Rural Housing Finance Explore Home loan provided by shhs Mahindra Rural Housing Finance"
            android:textSize="@dimen/text_12"
            android:textColor="@color/grey4"
            android:textFontWeight="500"
            android:layout_marginTop="@dimen/dimen_6"
            android:layout_marginEnd="@dimen/dimen_8"




            />

        <ImageView
            android:id="@+id/forward_icon"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_round_caret"
            android:rotation="270"/>

        <TextView
            android:id="@+id/termsConditionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemDesc"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/WorkSansSemiBold"
            android:text="T&amp;C Apply*"
            android:textSize="@dimen/text_10"
            android:textColor="@color/grey4"
            android:textFontWeight="400"
            android:layout_marginTop="@dimen/dimen_6"
            android:layout_marginEnd="@dimen/dimen_6"




            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>