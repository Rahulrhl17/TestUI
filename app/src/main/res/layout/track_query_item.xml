<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/requestId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15"
        style="@style/WorkSansSemiBold"
        android:text="Request Id: 549628731953"
        android:textSize="@dimen/text_12"
        android:textColor="@color/black"


        />
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="@style/WorkSansRegular"
        android:text="Category: Transaction related"
        android:textSize="@dimen/text_12"
        android:textColor="@color/black"


        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="@style/WorkSansRegular"
        android:text="Date: 12/02/2025, 9:30 PM"
        android:textSize="@dimen/text_12"
        android:textColor="@color/dark_grey_2"


        />
    <androidx.cardview.widget.CardView
        android:id="@+id/foodLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintStart_toStartOf="@id/time"
        app:cardCornerRadius="55dp"
        app:cardBackgroundColor="@color/red"
        app:cardElevation="0dp"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejected"
            android:textSize="@dimen/text_10"
            android:paddingStart="@dimen/dimen_12"
            android:paddingEnd="@dimen/dimen_12"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/dimen_8"
            android:gravity="center"
            style="@style/WorkSansMedium"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>