<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Use Aadhaar for payments (AePS)"
        style="@style/WorkSansSemiBold"/>

    <TextView
        android:id="@+id/message_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:text="I hereby give my explicit consent to Fino Payments Bank for Enabling Aeps Debit Service in my account. I confirm that the Aeps product features along with terms and conditions have been explained to me in detail and I agree to all the terms and conditions."
        style="@style/WorkSansRegular"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/okay"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        style="@style/OutlinedButton"
        app:strokeWidth="1dp"
        android:text="Okay"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        />

</LinearLayout>