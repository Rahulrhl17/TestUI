<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:id="@+id/headerLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blue"
        android:paddingEnd="@dimen/dimen_18">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_back_arrow"
                android:tint="@color/white"
                />

            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/search_text_field_bg"
                style="@style/WorkSansRegular"
                android:hint="@string/how_can_we_help_you"
                android:textSize="@dimen/text_12"
                android:paddingStart="25dp"
                android:textColorHint="@color/text_hint_color"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/ic_search"
                android:paddingEnd="22dp"
                android:layout_marginStart="@dimen/_13dp"
                />



        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginStart="@dimen/start_end_margin"
            android:layout_marginEnd="@dimen/start_end_margin">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                style="@style/WorkSansSemiBold"
                android:text="@string/which_transaction_do_you_need_help_with"
                android:textSize="@dimen/text_12"
                android:textColor="@color/text_colors"
                 app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
              <androidx.cardview.widget.CardView
                  android:id="@+id/selectDaysLayout"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dimen_20"
                  app:layout_constraintTop_toBottomOf="@id/title"
                  app:layout_constraintStart_toStartOf="parent"
                  app:cardCornerRadius="3dp"
                  app:cardBackgroundColor="@color/primary"
                  app:cardElevation="0dp"
                  >
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/last_7_days"
                          android:textSize="@dimen/text_12"
                          android:paddingStart="@dimen/dimen_10"
                          android:paddingEnd="@dimen/dimen_10"
                          android:paddingTop="@dimen/dimen_6"
                          android:paddingBottom="@dimen/dimen_6"
                          android:textColor="@color/white"
                          android:drawableEnd="@drawable/ic_arrow_down"
                          android:drawableTint="@color/white"
                          android:drawablePadding="@dimen/dimen_8"
                          android:gravity="center"
                          style="@style/WorkSansSemiBold"/>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/allTransactionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                style="@style/WorkSansSemiBold"
                android:text="@string/all_transactions"
                android:textSize="@dimen/text_16"
                android:textColor="@color/text_colors"
                app:layout_constraintTop_toBottomOf="@id/selectDaysLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/dimen_20"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transactionList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/allTransactionText"
               android:nestedScrollingEnabled="false"/>
            <TextView
                android:id="@+id/viewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                style="@style/WorkSansSemiBold"
                android:text="@string/view_more"
                android:textSize="@dimen/text_12"
                android:textColor="@color/primary"
                app:layout_constraintTop_toBottomOf="@id/transactionList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimen_24"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>