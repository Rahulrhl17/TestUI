<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/indigo">

    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="85dp"
        android:layout_height="83dp"
        android:src="@drawable/success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_34dp"/>
    <TextView
        android:id="@+id/congratulationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/success_icon"
        style="@style/WorkSansSemiBold"
        android:text="@string/congratulations"
        android:textSize="@dimen/text_16"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/requestRaisedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/congratulationsText"
        style="@style/WorkSansRegular"
        android:text="@string/gold_delivery_request_submitted"
        android:textSize="@dimen/text_16"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/gram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/requestRaisedText"
        style="@style/WorkSansSemiBold"
        android:text="0.079 gm"
        android:textSize="@dimen/text_24"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/statusIcon"
        android:layout_width="@dimen/dimen_16"
        android:layout_height="@dimen/dimen_16"
        android:src="@drawable/ic_completed"
        app:layout_constraintTop_toBottomOf="@id/gram"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_12"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/status" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WorkSansSemiBold"
        android:text="@string/completed"
        android:textSize="@dimen/text_12"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/statusIcon"
        app:layout_constraintTop_toTopOf="@id/statusIcon"
        app:layout_constraintBottom_toBottomOf="@id/statusIcon"
        android:layout_marginStart="@dimen/dimen_5"
        app:layout_constraintEnd_toStartOf="@+id/view" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="@dimen/dimen_11"
        android:layout_marginStart="@dimen/dimen_16"
        app:layout_constraintTop_toTopOf="@id/status"
        app:layout_constraintBottom_toBottomOf="@id/status"
        app:layout_constraintStart_toEndOf="@id/status"
        app:layout_constraintEnd_toStartOf="@id/statusTime"
        android:background="@color/search_hint"/>

    <TextView
        android:id="@+id/statusTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/WorkSansRegular"
        android:text="4 Mar 2023, 9:30 AM"
        android:textSize="@dimen/text_11"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/statusIcon"
        app:layout_constraintBottom_toBottomOf="@id/statusIcon"
        android:layout_marginStart="@dimen/dimen_16"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewStyle"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginStart="@dimen/dimen_18"
        android:layout_marginEnd="@dimen/dimen_18"
        app:layout_constraintTop_toBottomOf="@id/statusIcon">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_20">
            <TextView
                android:id="@+id/queryDetailsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/delivery_details"
                android:textSize="@dimen/text_16"
                style="@style/WorkSansSemiBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/shareIcon"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/text_colors"
                />
            <ImageView
                android:id="@+id/shareIcon"
                android:layout_width="14dp"
                android:layout_height="@dimen/dimen_16"
                android:src="@drawable/ic_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/downloadIcon"
                app:tint="@color/primary"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/dimen_24"/>
            <ImageView
                android:id="@+id/downloadIcon"
                android:layout_width="14dp"
                android:layout_height="@dimen/dimen_16"
                android:src="@drawable/ic_download"
                app:tint="@color/primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/newLockerBalanceText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/new_locker_balance"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansRegular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/queryDetailsText"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/gray2"
                android:layout_marginTop="@dimen/dimen_20"
                />
            <TextView
                android:id="@+id/newLockevalue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="2 gm"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansSemiBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newLockerBalanceText"
                app:layout_constraintEnd_toStartOf="@id/shareIcon"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/text_colors"
                android:layout_marginTop="@dimen/dimen_4"
                />

            <View
                android:id="@+id/view_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_hint_color"
                app:layout_constraintTop_toBottomOf="@id/newLockevalue"
                android:layout_marginTop="@dimen/dimen_8"/>

            <TextView
                android:id="@+id/transactionId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/transaction_id"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansRegular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_one"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/gray2"
                android:layout_marginTop="@dimen/dimen_8"
                />
            <TextView
                android:id="@+id/transactionIdvalue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="VBDHSJ284858"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansSemiBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/transactionId"
                app:layout_constraintEnd_toStartOf="@id/shareIcon"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/text_colors"
                android:layout_marginTop="@dimen/dimen_4"
                />
            <View
                android:id="@+id/view_two"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_hint_color"
                app:layout_constraintTop_toBottomOf="@id/transactionIdvalue"
                android:layout_marginTop="@dimen/dimen_8"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansRegular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_two"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/gray2"
                android:layout_marginTop="@dimen/dimen_8"
                />
            <TextView
                android:id="@+id/addressvalue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Sector 9, vashi"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansSemiBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintEnd_toStartOf="@id/shareIcon"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/text_colors"
                android:layout_marginTop="@dimen/dimen_4"
                />
            <View
                android:id="@+id/view_three"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_hint_color"
                app:layout_constraintTop_toBottomOf="@id/addressvalue"
                android:layout_marginTop="@dimen/dimen_8"/>
            <TextView
                android:id="@+id/expectedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/expected_date_of_delivery"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansRegular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_three"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/gray2"
                android:layout_marginTop="@dimen/dimen_8"
                />
            <TextView
                android:id="@+id/expectedDatevalue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="20/12/2023"
                android:textSize="@dimen/text_12"
                style="@style/WorkSansSemiBold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expectedDate"
                app:layout_constraintEnd_toStartOf="@id/shareIcon"
                android:layout_marginEnd="@dimen/dimen_16"
                android:textColor="@color/text_colors"
                android:layout_marginTop="@dimen/dimen_4"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/okayButton"
        style="@style/SolidButtonWhite"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/okay"
        android:textSize="@dimen/text_16"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        android:layout_marginTop="32dp"
        android:layout_marginStart="@dimen/start_end_margin"
        android:layout_marginEnd="@dimen/start_end_margin"
        />
    <TextView
        android:id="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered_by"
        app:layout_constraintTop_toBottomOf="@id/okayButton"
        android:layout_marginTop="@dimen/dimen_37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/safeGold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        style="@style/WorkSansRegular"
        android:textColor="@color/white"
        android:textSize="@dimen/text_10"/>

    <ImageView
        android:id="@+id/safeGold"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:src="@drawable/safe_gold"
        app:layout_constraintTop_toTopOf="@id/poweredBy"
        app:layout_constraintBottom_toBottomOf="@id/poweredBy"
        app:layout_constraintStart_toEndOf="@id/poweredBy"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dimen_6"/>
</androidx.constraintlayout.widget.ConstraintLayout>