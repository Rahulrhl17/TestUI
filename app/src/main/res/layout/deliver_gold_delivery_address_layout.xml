<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/header_layout"
        android:id="@+id/headerLayout"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/off_white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/start_end_margin"
            android:layout_marginEnd="@dimen/start_end_margin"
            android:layout_marginTop="@dimen/dimen_24">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardViewStyle"
                app:layout_constraintTop_toTopOf="parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_44"
                    android:paddingEnd="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_29"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_address"
                        android:textSize="@dimen/text_16"
                        style="@style/WorkSansSemiBold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/full_name"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginTop="22dp"
                        android:textColor="@color/gray2"/>
                    <TextView
                        android:id="@+id/fullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Raj Kumar"
                        android:textSize="@dimen/text_14"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_number"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:textColor="@color/gray2"/>
                    <TextView
                        android:id="@+id/mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7803690509"
                        android:textSize="@dimen/text_14"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/area_colony_road"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:textColor="@color/gray2"/>
                    <TextView
                        android:id="@+id/areaColonyRoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nerul, Near AIMS hospital"
                        android:textSize="@dimen/text_14"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/town_city"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:textColor="@color/gray2"/>
                    <TextView
                        android:id="@+id/townCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nerul, Navi mumbai"
                        android:textSize="@dimen/text_14"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pincode"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:textColor="@color/gray2"/>
                    <TextView
                        android:id="@+id/pinCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="400706"
                        android:textSize="@dimen/text_14"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginTop="@dimen/dimen_8"
                        />




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/district"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:textColor="@color/gray2"/>
                    <TextView
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thane"
                        android:textSize="@dimen/text_14"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:textColor="@color/gray2"/>
                    <TextView
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maharashtra"
                        android:textSize="@dimen/text_14"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginTop="@dimen/dimen_8"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:textSize="@dimen/text_12"
                        style="@style/WorkSansRegular"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:textColor="@color/gray2"/>
                    <TextView
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="India"
                        android:textSize="@dimen/text_14"
                        style="@style/WorkSansSemiBold"
                        android:layout_marginTop="@dimen/dimen_8"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/proceedButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        app:layout_constraintBottom_toTopOf="@id/poweredBy"
        style="@style/SolidButton"
        android:text="@string/proceed"
        android:textSize="@dimen/text_16"
        android:layout_marginBottom="@dimen/dimen_22"
        android:layout_marginStart="@dimen/dimen_18"
        android:layout_marginEnd="@dimen/dimen_18"
        />
    <TextView
        android:id="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered_by"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/safeGold"
        app:layout_constraintEnd_toStartOf="@+id/safeGold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        style="@style/WorkSansRegular"
        android:textColor="@color/black"
        android:textSize="@dimen/text_10"
        android:layout_marginBottom="@dimen/dimen_24"/>

    <ImageView
        android:id="@+id/safeGold"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:src="@drawable/safe_gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/poweredBy"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dimen_6"
        android:layout_marginBottom="@dimen/dimen_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>