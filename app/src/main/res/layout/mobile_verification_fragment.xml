<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="14dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansSemiBold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="visible"
                android:text="Let's get started"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansRegular"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="visible"
                android:text="Mobile Number"
                android:layout_marginTop="14dp"/>
            
            <EditText
                android:id="@+id/mobile_number"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/text_field_bg"
                android:inputType="phone"
                style="@style/WorkSansRegular"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansRegular"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="visible"
                android:text="Enter Referral Code (Optional)"
                android:layout_marginTop="14dp"/>

            <EditText
                android:id="@+id/referral_code"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="8dp"
                android:inputType="phone"
                style="@style/WorkSansRegular"

                android:background="@drawable/text_field_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/WorkSansRegular"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:text="Enter referee mobile number"
                android:layout_marginTop="4dp"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="match_parent"
                android:checked="true"
                style="@style/WorkSansMedium"
                android:textColor="@color/black"
                app:buttonTint="@color/finoBlue"
                android:text="Enable sweep account"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                style="@style/WorkSansRegular"
                android:layout_marginStart="34dp"
                android:layout_marginTop="-16dp"
                android:text="I hearby give my consent to FinoPayments Bank to enable my sweep account facility with Suryoday Small Finance Bank (SSFB) linked with my Fino Bank account. I also provide my explicit consent to FinoPayments Bank to share my KYC information with SSFB"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/send_sms"
                style="@style/SolidButton"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Get OTP"
                android:textSize="16sp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>